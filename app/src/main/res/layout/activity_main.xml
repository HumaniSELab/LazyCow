<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".app.MainActivity">


    <at.markushi.ui.CircleButton
        android:id="@+id/startCrowdTesting"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="0dp"
        android:src="@mipmap/start_1"
        app:cb_color="#E87373"
        app:cb_pressedRingWidth="20dip" />

    <TextView
        android:id="@+id/title"
        android:layout_width="386dp"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="Hi there, this is LazyCow, a mobile platform for supporting crowdsourced unit testing."
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="386dp"
        android:layout_height="89dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="I work as hard as Cow! Yet, I am lazy and will only work when you ask me to do so or your phone is idle for a certain period."
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:typeface="serif" />

    <!--    <TextView-->
    <!--        android:id="@+id/text2"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Serif text"-->
    <!--        android:textAllCaps="false"-->
    <!--        android:textSize="30sp"-->
    <!--        android:typeface="serif" />-->

</RelativeLayout>
